# Kubernetes Failure Intelligence Copilot â€” Environment Configuration

# Milvus Vector Database
MILVUS_URI=http://localhost:19530
MILVUS_TOKEN=root:Milvus
MILVUS_DB=default
MILVUS_COLLECTION=k8s_failures

# Embeddings (bge-m3)
EMBEDDING_MODEL=BAAI/bge-m3
EMBEDDING_DIMENSION=384
EMBEDDING_DEVICE=cpu
# For Apple Silicon (M1/M2/M3), set: EMBEDDING_DEVICE=mps

# Reranker (bge-reranker-v2-m3)
RERANKER_MODEL=BAAI/bge-reranker-v2-m3
RERANKER_BATCH_SIZE=128

# Language Models (via Ollama)
SIMPLE_MODEL=llama3.1
COMPLEX_MODEL=deepseek-r1:32b
OLLAMA_BASE_URL=http://localhost:11434

# Model Selection Strategy
# Complexity score (0-1) threshold to trigger use of COMPLEX_MODEL
# Below threshold: use SIMPLE_MODEL (fast, ~500ms)
# Above threshold: use COMPLEX_MODEL (reasoning-capable, ~3-5s)
QUERY_COMPLEXITY_THRESHOLD=0.7

# Milvus Index Parameters (HNSW)
HNSW_M=16
HNSW_EF_CONSTRUCTION=256
SEARCH_EF=128

# Document Chunking
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Retrieval Configuration
RETRIEVAL_TOP_K=4
RETRIEVAL_RERANK_K=10

# Logging
LOG_LEVEL=INFO
